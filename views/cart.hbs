<!-- views/cart.hbs -->

<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap"
    />
    <link rel="stylesheet" href="/cart.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-transparent">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Gada Electronics</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarScroll"
          aria-controls="navbarScroll"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarScroll">
          <ul
            class="navbar-nav ms-auto me-2 my-lg-0 navbar-nav-scroll"
            style="--bs-scroll-height: 100px;"
          >
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Products
              </a>
              <ul class="dropdown-menu">
                <li><a
                    class="dropdown-item"
                    href="/products?category=Smartphones"
                  >Smartphones</a></li>
                <li><a
                    class="dropdown-item"
                    href="/products?category=Televisions"
                  >Televisions</a></li>
                <li><a
                    class="dropdown-item"
                    href="/products?category=Audio"
                  >Audio</a></li>
                <li><a
                    class="dropdown-item"
                    href="/products?category=Accessories"
                  >Accessories</a></li>
                <li><a
                    class="dropdown-item"
                    href="/products?category=Computer"
                  >Computer</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="#">Show All</a></li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/aboutus">About</a>
            </li>
            {{#if user}}
              <li class="nav-item"><a
                  class="nav-link"
                  href="/profile"
                >Profile</a></li>
              <li class="nav-item"><a
                  class="nav-link"
                  href="/auth/logout"
                >Logout</a></li>
            {{else}}
              <li class="nav-item"><a
                  class="nav-link"
                  href="/login"
                >Login</a></li>
              <li class="nav-item"><a
                  class="nav-link"
                  href="/registration"
                >Register</a></li>
            {{/if}}
            <li class="nav-item">
              <a class="nav-link" href="/cart">Cart</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="cart-container">
      <h2>Your Shopping Cart</h2>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each cartItems}}
            <tr>
              <td>{{this.name}}</td>
              <td>${{this.price}}</td>
              <td>{{this.quantity}}</td>
              <td>${{this.price}}</td>
              <!-- Assuming total price is the same as unit price for now -->
              <td><button
                  style="background-color: rgba(255, 2, 2, 0.701); color: #fff;"
                >Remove</button></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="cart-total">
        <p>Total: ${{cartTotal}}</p>
      </div>
      <a href="#" class="checkout-btn">Proceed to Checkout</a>
    </div>
  </body>
</html>